<%= semantic_form_for @message do |f| %>
  <%= f.inputs do %>
    <%= f.input :author_id %>
    <%= f.input :conversation_id %>
    <%= f.input :content %>
    <%= f.input :unread %>
    <%= f.input :recipient_id %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
