<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Instructor</th>
      <th>Lesson</th>
      <th>Reviewer</th>
      <th>Rating</th>
      <th>Review</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.instructor_id %></td>
        <td><%= review.lesson_id %></td>
        <td><%= review.reviewer_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
