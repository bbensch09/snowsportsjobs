<div class="col-md-4">
<% @transaction = Transaction.new unless @lesson.transaction %>

<%= semantic_form_for @transaction do |f| %>
  <%= f.inputs do %>
    <%= f.input :lesson_id, :input_html => {value: @lesson.id, class: 'hidden'}, label: false %>
    <%= f.input :requester_id, :input_html => {value: @lesson.requester.id, class: 'hidden'}, label: false %>
    <%= f.input :base_amount, :input_html => {value: @lesson.price, class: 'hidden'}, label: false %>
<h3>
  Lesson Fee: $<%= @lesson.price %>.00
</h3>
    <!-- <%= f.input :tip_amount, placeholder: '20%', label: "Include Instructor Tip (optional)", :input_html => {class:'tip-amount-input'} %> -->
    <%= f.input :tip_amount, as: :select, collection: [['15%',0.15],['20%',0.20],['25%',0.25],['30%',0.30],['No Tip',0]], include_blank: 'Select Tip Amount', label: "Include Instructor Tip (optional)", :input_html => {class:'tip-amount-input'} %>
  <% end %>
  <%= f.submit "Confirm Tip Amount", class: 'btn btn-success' %>
  <%= link_to 'Back', @transaction.lesson, class: 'btn btn-default' %>

<% end %>
</div>
