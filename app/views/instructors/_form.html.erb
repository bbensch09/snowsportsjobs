
<!-- REGISTER -->
<div id="apply" class="navy-text">
 <div>
  <%= form_for @instructor do |f| %>
  <div class="">
    <h4> Your Contact Info </h4>
    <div class="col-md-6 vertical-padding">
      <%= f.text_field :first_name, placeholder: 'First name', class: 'form-control' %>
    </div>
    <div class="col-md-6 vertical-padding">
      <%= f.text_field :last_name, placeholder: 'Last name', class: 'form-control' %>
    </div>
  </div>
  <div class="">
    <div class="col-md-6 vertical-padding">
      <% if current_user %>
      <%= f.text_field :username, placeholder: current_user.email, class: 'form-control' %>
        <% else %>
              <%= f.text_field :username, placeholder: "name@example.com", class: 'form-control' %>
      <% end %>
    </div>
    <div class="col-md-6 vertical-padding">
      <%= f.text_field :phone_number, placeholder: 'Phone number', class: 'form-control' %>
    </div>
  </div>
  <h4> Where are you based? </h4>
  <div class="col-md-12">
    <%= f.text_field :city, placeholder: 'City', class: 'form-control' %>
    <br><br>
  </div>
  <h4> What type of instructor are you? </h4>
  <div class="col-md-12">
    <%= f.select :sport, ['Ski Instructor', 'Snowboard Instructor','Both Ski & Snowboard'], class: 'form-control' %>
    <br><br>
  </div>
  <h4> Preferred Resorts (select up to 4)</h4>
  <div class="col-md-12">
    <%= f.collection_check_boxes :location_ids, Location.all, :id, :name do |location_item| %>
    <div class="collection-check-box">
      <%= location_item.check_box %>
      <%= location_item.label %>
    </div>
    <% end %>
    <br>
  </div>
  <h4>Previous professional certifications (PSIA, AASI) </h4>
  <div class="col-md-12">
    <%= f.text_field :certification, placeholder: 'Do you hold any certifications?', class: 'form-control' %>
    <br>
  </div>
  <h4>Why are you excited to join Snow Schoolers?</h4>
  <div class="col-md-12">
    <%= f.text_area :intro, rows:5, placeholder: 'Describe your background in a few sentences', class: 'form-control' %>
  </div>
  <div class="row">
    <div class="col-md-12 vertical-padding">
      <% if controller.action_name == 'update' %>
      <%= f.submit "Update Instructor Profile", class: "btn btn-primary btn-xl page-scroll pull-right push-bottom" %>
      <% else %>
      <%= f.submit "Submit Application", class: "btn btn-primary btn-xl page-scroll pull-right push-bottom" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
<div class="spacer">
</div>

</div>
<!-- /REGISTER -->
