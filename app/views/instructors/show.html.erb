<div class="container">

<p id="notice"><%= notice %></p>

<p>
  <strong>User ID:</strong>
  <%= @instructor.user_id %>
</p>
<p>
  <strong>User Email:</strong>
  <% if @instructor.user %>
      <%= @instructor.user.email %>
    <% else %>
      <%= @instructor.username %>
  <% end %>
</p>
<div class="col-lg-12 col-sm-12 pull-left">
    <%= image_tag @instructor.avatar.url(:large), alt:"avatar-img", class:"img-responsive img-circle instructor-photo" %>
  </div>
<p>
  <strong>First name:</strong>
  <%= @instructor.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @instructor.last_name %>
</p>
<p>
  <strong>City:</strong>
  <%= @instructor.city %>
</p>

<p>
  <strong>Certification:</strong>
  <%= @instructor.certification %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @instructor.phone_number %>
</p>

<p>
  <strong>Sport:</strong>
  <%= @instructor.sport %>
</p>

<p>
  <strong>Resorts:</strong>
  <ul>
    <% @instructor.locations.each do |location| %>
    <li> <%= location.name %> </li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Intro:</strong>
  <%= @instructor.intro %>
</p>

<p>
  <strong>Status:</strong>
  <%= @instructor.status %>
</p>

<%= link_to 'Edit', edit_instructor_path(@instructor) %> |
<% if current_user.email == 'brian@skischool.co' %>
<%= link_to 'Verify Instructor', edit_user_registration_path(@instructor.user), class: 'btn btn-success' %> |
<% end %>
<%= link_to 'Back', instructors_path %>
<div class="buffer"></div>
</div>
