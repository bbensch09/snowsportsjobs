<div id="middle" class="container">
  <div class="white">

    <header class="page-header">
      <h1>Edit Profile</h1>
    </header>

    <!-- UPDATE PROFILE -->
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="row">
        <div class="col-md-6">
          <h4>Basic <strong>Info</strong></h4>

          <div class="row">
            <div class="form-group">
              <div class="col-md-12">
                <%= f.label :name %><br />
                <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <div class="col-md-12">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: 'form-control' %>
              </div>
            </div>
          </div>
          <% if current_user && current_user.email == 'brian@skischool.co' %>
            <div class="col-md-12">
            <span class="remember-box checkbox">
              <label for="rememberme">
                <%= f.check_box :verified_instructor %> Verified Instructor
              </label>
            </span>
          </div>
          <% elsif @user.verified_instructor %>
          <span>You are a verified instructor.</span>
          <% else %>
<!--           <span>You have profile is active.</span> -->
          <% end %>
        </div>


        <div class="col-md-6">
          <div class="facebook-box">
            <div class="row title">
              <div class="col-md-12">
                <div class="text">Interested in teaching? Apply to become an instructor:</div>
              </div>
            </div>

            <div class="row button">
              <div class="col-md-3"></div>
              <div class="col-md-6">
                  <%= link_to "Become an Instructor", new_instructor_path, class: "btn sign-up-btn form-control" %><br />
              </div>
              <div class="col-md-3"></div>
            </div>
        </div>
          <% if f.object.password_required? %>
            <h4>Security <strong>Info</strong></h4>

            <div class="row">
              <div class="form-group">
                <div class="col-md-6">
                  <label>New Password</label>
                  <%= f.password_field :password, class: 'form-control' %>
                </div>
                <div class="col-md-6">
                  <label>New Password Confirmation</label>
                  <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <% if f.object.password_required? %>
        <div class='row'>
          <div class="col-md-6"></div>
          <div class="col-md-6">
            <label class="font300">Enter current password to confirm changes</label>
            <div class="input-group">
              <%= f.password_field :current_password, class: 'form-control' %>
              <span class="input-group-btn">
                <%= f.submit "UPDATE", class: 'btn sign-up-btn' %>
              </span>
            </div>
          </div>
        </div>
      <% else %>
        <div class='row'>
          <div class="col-md-6"></div>
          <div class="col-md-6"><%= f.submit "UPDATE", class: 'btn sign-up-btn pull-right' %></div>
        </div>
      <% end %>

      <div class='row'>
        <div class="col-md-6"></div>
        <div class="col-md-6"><%= link_to "Return to previous page", :back, class: 'return-link pull-right' %></div>
      </div>
    <% end %>
    <!-- /UPDATE PROFILE -->

    <hr />

    <!-- CALLOUT -->
    <div class=" alert-default fade in">

      <div class="row">

        <div class="col-md-9 col-sm-8"><!-- left text -->
          <h4 class="nomargin">Cancel <strong>Your Account</strong></h4>
          <p class="nomargin">
            We hope you'll give Surf Schoolers another shot at some point in the future!
          </p>
        </div><!-- /left text -->


        <div class="col-md-3 col-sm-4 text-right"><!-- right btn -->
          <%= link_to "CANCEL ACCOUNT", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-warning" %>
        </div><!-- /right btn -->

      </div>

    </div>
    <!-- /CALLOUT -->


  </div>
</div>

<!-- SLIDER -->
<img id="cycle-loader" src="/assets/spinner.gif" alt="loader" />

<ul id="slider">
  <li><img src="/assets/demo/slider/chamonix-skiing.jpg" alt="" /></li>
  <li><img src="/assets/demo/slider/ski-1.jpg" alt="" /></li>
</ul>
<!-- /SLIDER -->
