<%= semantic_form_for @contestant do |f| %>
  <%= f.inputs do %>
    <%= f.input :username %>
    <%= f.input :hometown %>

    <h4>Please optionally attach an avatar photo to complete your profile.</h4>
      <div class="col-md-12 vertical-padding">
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>
  
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
