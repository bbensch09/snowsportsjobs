<div class="container">
<h3><a href="#hideLessons" class="btn btn-success" id="toggle-completed-lessons">Show (hide) Completed Lessons</a></h3>
<div id="completed-lessons" class="hidden">
<h1>Previously Completed Lessons</h1>

<table class="instructors-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Instructor</th>
      <th>Type</th>
      <!-- <th>Deposit?</th> -->
      <th>Student</th>
      <!-- <th>Mountain</th> -->
      <th>Start Time</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
        <% if lesson.completed? %>
          <tr>
            <% if lesson.instructor %>
            <td><%= image_tag(lesson.instructor.avatar.url(:thumb), alt:"avatar-img", class:"img-responsive img-thumbnail avatar-thumbnail") %></td>
            <td><%= lesson.instructor.name %></td>
            <% else %>
            <td>"TBD"</td>
            <td>"TBD"</td>
            <% end %>
            <td><%= link_to "#{lesson.activity}", lesson, class: "btn btn-default" %></td>
            <!-- <td><%= lesson.deposit_status %></td> -->
            <td><%= lesson.requester.name %></td>
            <!-- <td><%= lesson.location.name %></td> -->
            <td><%= lesson.start_time %></td>
            <td><%= lesson.lesson_time.date.strftime("%m/%d") %></td>
            <td><%= lesson.state %></td>
            <td></td>
            <td></td>
            <!-- <td><%= link_to 'Edit', edit_lesson_path(lesson) %></td> -->
            <!-- <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <%end%>
    <% end %>
  </tbody>
</table>
</div>
