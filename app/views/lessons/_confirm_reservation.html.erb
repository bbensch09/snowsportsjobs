<div class="col-md-12">
        <%= form_tag charges_path do %>
          <article>
            <% if flash[:error].present? %>
              <div id="error_explanation">
                <p><%= flash[:error] %></p>
              </div>
            <% end %>
            <label class="amount">
              <span>A $50.00 refundable deposit is required to complete your reservation. Your payment information will be securely stored and the remaining balance will be charged 24 hours before the start of your lesson. If for any reason you are unsatisfied with your Snow Schoolers experience, please ask about our 100% satisfaction guarantee.</span>
            </label>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                  data-description="$50 Lesson Deposit. The remaining balance will be charged 24 hours before the start of your lesson."
                  data-name="Snow Schoolers"
                  data-image="https://s3.amazonaws.com/snowschoolers/SnowSchoolers-favicon.png"
                  data-amount="5000"
                  data-locale="auto"
                  data-zip-code="true">
          </script>
        <% end %>
</div>
