<div class='nested-fields student-box'>
  <%= f.inputs do %>
    <div class='row'>
      <div class='col-md-6'>
        <label>Student Name</label>
        <span class='remove-student'>(<%= link_to_remove_association "Remove Student", f, class: 'remove-student' %>)</span>
        <%= f.input :name, placeholder: "Full name of student", label: false %>
      </div>
      <div class='col-md-3'>
        <label>Age Range</label>
        <%= f.input :age_range, as: :select, collection: ['Under 10','11-17','18-30', '31-40','41-50','51 and up'], include_blank: 'Age Range', label: false %>
      </div>
      <div class='col-md-3'>
        <label>Gender</label>
        <%= f.input :gender, as: :select, collection: ['Male', 'Female'], include_blank: 'Gender', label: false %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <label>About the student</label>
        <%= f.input :relationship_to_requester, as: :select, collection: ['I am the student.', 'Student is a friend.', 'Student is my significant other.','Student is my child.'], selected: 'I am the student.', include_blank: 'How is this student related to you?', label: false %>
      </div>
      <div class='col-md-12'>
            <label>Most recent experience </label>
            <%= f.input :most_recent_experience, as: :select, collection: [["This will be the student's first time."],['Earlier this season.'], ['Last year.'], ['Less than 3 years ago.'],['More than 3 years ago.'],['More than 10 years ago.']], include_blank: 'When did the student last go skiing or snowboarding?', label: false %>
      </div>
      <div class='col-md-12'>
            <label>Ability level </label>
            <%= f.input :most_recent_level, as: :select, collection:
              ["Level 1 - first-time ever, no previous experience.",
              "Level 2 - safely stops on beginner green circle terrain.",
              "Level 3 - makes wedge turns (heel-side turns for snowboarding) in both directions on beginner terrain.",
              "Level 4 - skis all green circle runs confidently.",
              "Level 5 - makes parallel turns (S-turns for snowboarding) on easy terrain, comfortable on most blue runs.",
              "Level 6 - confidently links turns across all intermediate blue square terrain.",
              "Level 7 - demonstrates edge control in carving turns on advanced terrain.",
              "Level 8 - safely navigates moguls and off-piste terrain",
              "Level 9 - confidently and safely skis expert-only (double-black diamond) terrain."],
               include_blank: "Approximately what level ability is the student?", label: false %>
      </div>
      <div class='col-md-12'>
            <label>Other sports experience </label>
            <%= f.input :other_sports_experience, placeholder: 'plays recreational soccer, is a varsity tennis player, casual runner, etc.', label: false %>
      </div>
          <%= f.input :requester_id, as: :hidden, input_html: { value: current_user.id } %>
    </div>
  <% end %>
</div>
