<div class='nested-fields student-box'>
  <%= f.inputs do %>
    <div class='row'>
      <div class='col-md-6'>
        <label>Student Name</label>
        <span class='remove-student'>(<%= link_to_remove_association "Remove Student", f, class: 'remove-student' %>)</span>
        <%= f.input :name, placeholder: "Full name of student", label: false %>
      </div>
      <div class='col-md-3'>
        <label>Age Range</label>
        <%= f.input :age_range, as: :select, collection: ['3-10', '11-20', '21-30', '31-40', '41 and up'], include_blank: 'Age Range', label: false %>
      </div>
      <div class='col-md-3'>
        <label>Gender</label>
        <%= f.input :gender, as: :select, collection: ['Male', 'Female'], include_blank: 'Gender', label: false %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <label>Relationship to Requester</label>
        <%= f.input :relationship_to_requester, as: :select, collection: ['Me', 'Child', 'Friend', 'Spouse', 'Other'], include_blank: 'How is this student related to you?', label: false %>
      </div>
    </div>
  <% end %>
</div>